<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstap css link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />

    <title>Student Management System - SMS</title>
  </head>
  <body>
    <div class="wrapper d-flex">
      <%- include('_sideBar') -%>
      <main class="main-section container-lg">
        <section class="reports mt-3">
          <div class="row">
            <div class="col-md-6">
              <div
                class="d-flex flex-column justify-content-center align-items-center bg-light shadow"
              >
                <i class="bi bi-people fs-1"></i>
                <h3>Student numbers</h3>
                <h1><%= students.length %></h1>
              </div>
            </div>

            <div class="col-md-6">
              <div
                class="d-flex flex-column justify-content-center align-items-center bg-light shadow"
              >
                <i class="bi bi-journals fs-1"></i>
                <h3>Course numbers</h3>
                <h1><%= courses.length %></h1>
              </div>
            </div>
          </div>
        </section>
        <section class="actions mt-4">
          <h5>Available commands</h5>
          <hr />
          <div class="b-example-divider"></div>

          <ul class="list-group list-group-checkable">
            <div class="badge bg-light text-dark">Course</div>
            <a
              class="text-secondary list-group-item-action list-group-item shadow-sm"
              href="/course/new"
            >
              <i class="bi bi-plus-square-dotted"></i>
              Create new course</a
            >

            <a
              class="text-secondary list-group-item-action list-group-item shadow-sm"
              href="/course"
            >
              <i class="bi bi-journals"></i>

              All courses</a
            >
            <div class="badge bg-light text-dark mt-3">Applicant</div>
            <a
              class="text-secondary list-group-item-action list-group-item shadow-sm"
              href="/students/new"
            >
              <i class="bi bi-person-plus"></i>
              New student</a
            >

            <a
              class="text-secondary list-group-item-action list-group-item shadow-sm"
              href="/students"
            >
              <i class="bi bi-people-fill"></i>

              All students</a
            >
          </ul>
        </section>
      </main>
    </div>
    <script src="/js/main.js"></script>

    <!-- Bootstap Javasctipt link -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
  </body>
</html>